{
	"compilerOptions": {
		"newLine": "LF",
		"target": "ES2020",
		"baseUrl": ".",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
